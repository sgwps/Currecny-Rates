<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/text_main</item>
        <item name="colorControlHighlight">@color/blue_light</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_main</item>                   <!--header background-->
        <item name="android:windowBackground">@color/background</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/blue_main</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/text_main</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/blue_main</item>
        <item name="android:calendarTextColor">@color/text_main</item>
    </style>
    
</resources>